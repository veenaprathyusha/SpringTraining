12.
import React from 'react';
const persons=[
	{
	name:'Eshan',
	age:15
	},
	{
	name:'Earr',
	age:18
	},
	{
	name:'Veena',
	age:21
	},
	{
	name:'Preethi',
	age:23
	}
];
function App(){
	return(
	<div>
		{persons.filter(person=>person.age<20).map(filterPerson=>(
		<li>
		{filterPerson.name}
		</li>
		))}
	</div>
	);
}
export default App;
